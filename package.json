{
  "name": "SapCapDocumentManagementServiceFacade",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.10.4",
    "@sap-cloud-sdk/generator": "^3.22.2",
    "@sap-cloud-sdk/http-client": "^3.22.2",
    "@sap-cloud-sdk/resilience": "^3.22.2",
    "@cap-js/sdm": "^1.2.2",
    "@sap/cds": "^8",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "prettier": "3.3.3",
    "rimraf": "^5.0.10"
  },
  "scripts": {
    "start": "cds run",
    "start-ts": "cds-ts serve",
    "debug-ts": "cds-ts watch",
    "debug-in-memory": "cds-ts watch --with-mocks --in-memory",
    "hybrid-in-memory": "cds-ts watch --with-mocks --in-memory --profile hybrid",
    "watch-customizing": "cds watch --open customizing/webapp/index.html?sap-ui-xx-viewCache=false",
    "build": "npm run build:cf",
    "build:cf": "npm run build:cds && npm run cleanup:ts && npm run build:ts",
    "build:ts": "tsc",
    "build:cds": "cds build --production",
    "cleanup:ts": "npx rimraf gen/srv/**/*.ts",
    "debug:cf": "npx --node-options=\"--inspect=0.0.0.0:9229\" cds run",
    "start:cf": "cds run",
    "deploy": "mbt build -t gen --mtar mta.tar && cf deploy gen/mta.tar",
    "format": "prettier --write ."
  },
  "cds": {
    "requires": {
      "cors": {
        "credentials": true,
        "origin": "*"
      },
      "db": {
        "[development]": {
          "kind": "postgres",
          "impl": "@cap-js/postgres",
          "credentials": {
            "host": "localhost",
            "port": 5432,
            "user": "postgres",
            "password": "postgres",
            "database": "postgres"
          }
        },
        "[hybrid]": {
          "kind": "postgres",
          "impl": "@cap-js/postgres",
          "credentials": {
            "host": "localhost",
            "port": 5432,
            "user": "postgres",
            "password": "postgres",
            "database": "postgres"
          }
        },
        "[production]": {
          "kind": "postgres",
          "impl": "@cap-js/postgres",
          "requestTimeout": 30000,
          "connectionTimeoutMillis": 2000
        }
      },
      "sdm": {
        "settings": {
          "repositoryId": "1"
        }
      },
      "auth": "xsuaa"
    }
  },
  "sapux": [
    "app/managebooks"
  ]
}
